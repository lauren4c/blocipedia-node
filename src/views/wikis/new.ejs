<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
    <% include ../static/partials/messages.ejs %>
      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">title must be 5 or more characters in length.</small>

        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
          <small class="text-muted" id="titleHelp">body must be 10 or more characters in length.</small>

        </div>
        <%if( (currentUser) && (currentUser.role > 0)) { %>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="private" id="privateWiki">
          <label class="form-check-label" for="private">
            Make Private
          </label>
        </div>
    
            <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
